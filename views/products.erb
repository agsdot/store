<div>
<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Price</th>
    <th>Sale</th>
  </tr>
  <% @rs.each do |row| %>
  <tr>
    <td><a href="/products/<%= row['id'] %>"> <%= row['id'] %></a></td>
    <td><%= row['name'] %></td>
    <td><%= row['price'] %></td>
    <td><% if row['on_sale'] == 't' %>
        <img src='sale_pic.jpg' />
          <% end %>
    </td>
  </tr>
  <% end %>
</table>
</div>

