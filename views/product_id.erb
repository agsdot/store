<div>
<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Id</th>
  </tr>
  <% @rs.each do |row| %>
  <tr>
    <td><%= row['name'] %></td>
    <td><%= row['price'] %></td>
    <td><%= row['id'] %></td>
    <td><% if row['on_sale'] == 't' %>
        <img src='../sale_pic.jpg' />
          <% end %>

    </td>
  </tr>
  <% end %>
</table>
</div>

